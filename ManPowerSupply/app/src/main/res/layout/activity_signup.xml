<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIGN UP"
        android:id="@+id/signup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/edit_userName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:hint="User Name..."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/edit_userEmail"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="User Email..."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edit_userName"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/edit_userPhone"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="User Phone Number..."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edit_userEmail"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/edit_userPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="User Password..."
        android:inputType="numberPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edit_userPhone"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/edit_userRePassword"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="Confirm Password..."
        android:inputType="numberPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/edit_userPassword"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:padding="10dp"
        />


    <TextView
        android:id="@+id/already_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:layout_below="@id/edit_userRePassword"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/GoToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/edit_userRePassword"
        android:layout_toRightOf="@id/already_account"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:onClick="goToLogin"
        android:clickable="true"
        android:focusable="true"
        android:textColor="#0000bb"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_below="@id/already_account"
        android:layout_margin="40dp"
        />

</RelativeLayout>