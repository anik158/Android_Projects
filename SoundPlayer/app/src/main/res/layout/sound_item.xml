<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:layout_marginBottom="8dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/singleCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DB1616">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/soundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imgView"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/soundMaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound Maker"
            android:textColor="#9F8888"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/imgView"
            app:layout_constraintTop_toBottomOf="@id/soundName"/>



    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.cardview.widget.CardView>